<!-- Page Title -->
<div class="page-title" data-aos="fade">
  <div class="heading">
    <div class="container">
      <div class="row d-flex justify-content-center text-center">
        <div class="col-lg-8">
          <h1>Random Dog Image</h1>
          <p class="mb-0">Powered by the Dog CEO API</p>
        </div>
      </div>
    </div>
  </div>
  <nav class="breadcrumbs">
    <div class="container">
      <ol>
        <li><a href="/">Home</a></li>
        <li class="current">Random Dog</li>
      </ol>
    </div>
  </nav>
</div>
<!-- End Page Title -->

<!-- Dog Image Section -->
<section id="dog-image" class="dog-image section">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8 text-center">
        
        <% if (locals.error) { %>
          <div class="alert alert-danger">
            <%= error %>
          </div>
        <% } %>
        
        <% if (dogImage) { %>
          <div class="card">
            <img src="<%= dogImage %>" class="card-img-top" alt="Random Dog">
            <div class="card-body">
              <h5 class="card-title">Here's a random dog for you!</h5>
              <p class="card-text">This image is fetched from the Dog CEO API, which provides random dog images from various breeds.</p>
              <a href="/externalapi" class="btn btn-primary">Get Another Dog!</a>
            </div>
          </div>
        <% } %>
        
        <div class="mt-4">
          <p class="text-muted">
            <strong>API Used:</strong> 
            <a href="https://dog.ceo/dog-api/" target="_blank">Dog CEO API</a>
          </p>
          <p class="text-muted">
            This API provides random dog images from a collection of dog breeds. 
            No authentication required!
          </p>
        </div>
        
      </div>
    </div>
  </div>
</section>
<!-- End Dog Image Section -->