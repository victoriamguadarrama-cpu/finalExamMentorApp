<!-- Events Section -->
<section id="events" class="events section">
  <div class="container" data-aos="fade-up">
    <div class="row">
      <% events.forEach(event => { %>
      <div class="col-md-6 d-flex align-items-stretch">
        <div class="card">
          <div class="card-img">
            <img src="assets/img/<%= event.image %>" alt="<%= event.title %>" />
          </div>
          <div class="card-body">
            <h5 class="card-title"><a href=""><%= event.title %></a></h5>
            <p class="fst-italic text-center"><%= event.formattedDate %></p>
            <p class="card-text"><%= event.summary %></p>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</section>
<!-- /Events Section -->
