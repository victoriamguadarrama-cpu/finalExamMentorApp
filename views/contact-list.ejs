<!-- Page Title -->
<div class="page-title" data-aos="fade">
  <div class="heading">
    <div class="container">
      <div class="row d-flex justify-content-center text-center">
        <div class="col-lg-8">
          <h1>Respond to Contacts</h1>
          <p class="mb-0">Manage and respond to contact requests from users.</p>
        </div>
      </div>
    </div>
  </div>
  <nav class="breadcrumbs">
    <div class="container">
      <ol>
        <li><a href="/">Home</a></li>
        <li class="current">Contact Responses</li>
      </ol>
    </div>
  </nav>
</div>
<!-- End Page Title -->

<!-- Contacts Section -->
<section id="contacts" class="contacts section">
  <div class="container">
    <% if (contacts.length === 0) { %>
      <div class="alert alert-info text-center">
        <p class="mb-0">No pending contact requests at this time.</p>
      </div>
    <% } else { %>
      <% contacts.forEach(contact => { %>
        <div class="card mb-4">
          <div class="card-header">
            <h5><%= contact.subject %></h5>
            <small class="text-muted">
              From: <strong><%= contact.name %></strong> 
              (<%= contact.email %>) | 
              Date: <%= contact.postDate.toLocaleDateString() %>
            </small>
          </div>
          <div class="card-body">
            <p><strong>Message:</strong></p>
            <p><%= contact.message %></p>
            
            <hr>
            
            <form action="/admin/contacts/respond" method="POST">
              <input type="hidden" name="contactId" value="<%= contact._id %>">
              
              <div class="mb-3">
                <label for="response-<%= contact._id %>" class="form-label">
                  <strong>Your Response:</strong>
                </label>
                <textarea 
                  class="form-control" 
                  id="response-<%= contact._id %>" 
                  name="response" 
                  rows="4" 
                  required
                  placeholder="Type your response here..."></textarea>
              </div>
              
              <button type="submit" class="btn btn-primary">
                <i class="bi bi-send"></i> Send Response
              </button>
            </form>
          </div>
        </div>
      <% }) %>
    <% } %>
  </div>
</section>
<!-- End Contacts Section -->