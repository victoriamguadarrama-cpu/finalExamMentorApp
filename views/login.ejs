<!-- ADD THIS SECTION FOR ADMIN CREDENTIALS -->
<div class="container mt-4" data-aos="fade-up">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="alert alert-info">
        <h5>Testing Credentials (Admin Account)</h5>
        <p class="mb-1"><strong>Email:</strong> <%= adminCreds.email %></p>
        <p class="mb-0"><strong>Password:</strong> <%= adminCreds.password %></p>
      </div>
    </div>
  </div>
</div>
<!-- END ADMIN CREDENTIALS -->







<!-- Login Section -->
<section id="contact" class="contact section">
  <div class="container" data-aos="fade-up" data-aos-delay="100">
    <div class="row gy-4">
      <div class="col-lg-12 d-flex align-items-center justify-content-center">
        <form
          action="/login"
          method="post"
          
        >
          <% if (errorMessage) { %>
          <div class="error-message"><%= errorMessage %></div>
          <% } %>
          <div class="row gy-4">
            <div class="col-md-12">
              <input
                type="email"
                class="form-control"
                name="email"
                placeholder="Email"
                required
              />
            </div>

            <div class="col-md-12">
              <input
                type="password"
                class="form-control"
                name="password"
                placeholder="Password"
                required
              />
            </div>

            <div class="col-md-12 text-center">

              <button type="submit">Log In</button>
              <p class="mt-3">
                Don't have an account? <a href="/signup">Sign Up</a>
              </p>
            </div>
          </div>
        </form>
      </div>
      <!-- End Login Form -->
    </div>
  </div>
</section>
<!-- Login Section -->
