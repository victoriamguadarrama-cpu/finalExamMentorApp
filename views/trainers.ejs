<!-- Page Title -->
<div class="page-title" data-aos="fade">
  <div class="heading">
    <div class="container">
      <div class="row d-flex justify-content-center text-center">
        <div class="col-lg-8">
          <h1>Our Trainers</h1>
          <p class="mb-0">
            Meet our team of experienced professionals dedicated to guiding you
            on your learning journey. Our trainers bring real-world expertise,
            industry insights, and a passion for teaching to help you succeed.
            Learn from the best and take your skills to the next level with
            Mentor.
          </p>
        </div>
      </div>
    </div>
  </div>
  <nav class="breadcrumbs">
    <div class="container">
      <ol>
        <li><a href="/">Home</a></li>
        <li class="current">Our Trainers</li>
      </ol>
    </div>
  </nav>
</div>

<!-- End Page Title -->

<!-- Trainers Section -->
<section id="trainers" class="section trainers">
  <div class="container">
    <div class="row gy-5">
      <% trainers.forEach((trainer, index) => { %>
      <div
        class="col-lg-4 col-md-6 member"
        data-aos="fade-up"
        data-aos-delay="<%= 100 + (index * 100) %>"
      >
        <div class="member-img">
          <img
            src="assets/img/trainers/<%= trainer.image %>"
            class="img-fluid"
            alt="<%= trainer.name %>"
          />
          <div class="social">
            <a href="#"><i class="bi bi-twitter-x"></i></a>
            <a href="#"><i class="bi bi-facebook"></i></a>
            <a href="#"><i class="bi bi-instagram"></i></a>
            <a href="#"><i class="bi bi-linkedin"></i></a>
          </div>
        </div>
        <div class="member-info text-center">
          <h4><%= trainer.name %></h4>
          <span><%= trainer.expertise %></span>
          <p><%= trainer.bio %></p>
        </div>
      </div>
      <% }); %>
    </div>
  </div>
</section>
<!-- /Trainers Section -->
