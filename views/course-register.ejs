<!-- Page Title -->
<div class="page-title" data-aos="fade">
  <div class="heading">
    <div class="container">
      <div class="row d-flex justify-content-center text-center">
        <div class="col-lg-8">
          <h1>Register for Course</h1>
          <p class="mb-0">Complete the form below to register</p>
        </div>
      </div>
    </div>
  </div>
  <nav class="breadcrumbs">
    <div class="container">
      <ol>
        <li><a href="/">Home</a></li>
        <li><a href="/courses">Courses</a></li>
        <li class="current">Register</li>
      </ol>
    </div>
  </nav>
</div>
<!-- End Page Title -->

<!-- Registration Form Section -->
<section id="contact" class="contact section">
  <div class="container" data-aos="fade-up" data-aos-delay="100">
    <div class="row gy-4">
      <div class="col-lg-8 mx-auto">
        <form action="/courses/register" method="POST">
          <!-- Hidden user ID -->
          <input type="hidden" name="userId" value="<%= user.id %>">

          <div class="row gy-4">
            <!-- First Name (readonly) -->
            <div class="col-md-6">
              <label for="firstName" class="form-label">First Name</label>
              <input
                type="text"
                class="form-control"
                id="firstName"
                value="<%= user.firstName %>"
                readonly
              />
            </div>

            <!-- Last Name (readonly) -->
            <div class="col-md-6">
              <label for="lastName" class="form-label">Last Name</label>
              <input
                type="text"
                class="form-control"
                id="lastName"
                value="<%= user.lastName || '' %>"
                readonly
              />
            </div>

            <!-- Email (readonly) -->
            <div class="col-md-12">
              <label for="email" class="form-label">Email</label>
              <input
                type="email"
                class="form-control"
                id="email"
                value="<%= user.email || '' %>"
                readonly
              />
            </div>

            <!-- Course Selection Dropdown -->
            <div class="col-md-12">
              <label for="courseId" class="form-label">Select Course</label>
              <select name="courseId" id="courseId" class="form-control" required>
                <% courses.forEach(c => { %>
                  <% const isFull = c.registrants.length >= c.capacity; %>
                  <option 
                    value="<%= c._id %>" 
                    <%= selectedCourse._id.toString() === c._id.toString() ? 'selected' : '' %>
                    <%= isFull ? 'disabled' : '' %>
                  >
                    <%= c.title %> 
                    (<%= c.capacity - c.registrants.length %> seats available)
                    <%= isFull ? '- FULL' : '' %>
                  </option>
                <% }) %>
              </select>
            </div>

            <!-- Submit Button -->
            <div class="col-md-12 text-center">
              <button type="submit" class="btn btn-primary btn-lg">Register</button>
              <a href="/courses" class="btn btn-secondary btn-lg ms-2">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
<!-- End Registration Form Section -->